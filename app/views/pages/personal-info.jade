    // main container .wide-content is used for this layout without sidebar :)
    .content
        .container-fluid
            #pad-wrapper.settings-wrapper
                // avatar column
                .span3.avatar-box
                    .personal-image
                        img.avatar.img-circle(src='/img/personal-info.png')
                        p 上传自己的靓照吧
                        input(type='file')
                // edit form column
                .span7.personal-info
                    h5.personal-title 个人中心
                    form
                        -
                          var defalutUser = {
                              userRealName: 'Alejandra',
                              userDepartment: 'Design Co.',
                              userPwd: 'blablablabla',
                              userRole: 'STUFF',
                              userEmail: 'alejandra@design.com',
                              userName: 'alegalvan'
                            }                          
                          var curUser = defalutUser;     
                        
                        // USE this flag to load not defalut user.
                        if alreadyLogin    
                          - curUser = user;                                                       
                            
                        .field-box
                            label 姓名：
                            input.span5.inline-input(type='text',  placeholder='Your real name', value='#{curUser.userRealName}')
                        .field-box
                            label 部门：
                            input.span5.inline-input(type='text', placeholder='Your Department', value='#{curUser.userDepartment}')
                            //- input.inline-input(type='text', placeholder='Title', readonly='readonly', value='#{item.user.userName}')
                        .field-box
                            label 职位：
                            input.span5.inline-input(type='text', placeholder='Your Position', value='#{curUser.userRole.roleName}')
                        .field-box
                            label 邮箱：
                            input.span5.inline-input(type='email',  placeholder='Your E-mail',value='#{curUser.userEmail}')
                        .field-box
                            label 用户名：
                            input.span5.inline-input(type='text',  placeholder='Your username', value='#{curUser.userName}')
                        .field-box
                            label 密码：
                            input.span5.inline-input(type='password',  placeholder='Your Password', value='#{curUser.password}')
                        .field-box
                            label 确认密码：
                            input.span5.inline-input(type='password',  placeholder='Repeat Your Password',value='')
                        .span6.field-box.actions
                            input.btn-glow.primary(type='button', value='保存更改')
                            span 或
                            input.reset(type='reset', value='取消')
