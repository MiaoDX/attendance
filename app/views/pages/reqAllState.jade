extends ../layout

block content
	.content
		.container-fluid
			#pad-wrapper.users-list
				.row-fluid.header
					h3 User
				// Users table
				.row-fluid.table
					table.table.table-hover
						thead
							tr
								th.span1.sortable
									| 编号
								th.span2.sortable
									| 请假类型	
								th.span2.sortable
									| 假期开始日期
								th.span2.sortable
									span.line
									| 持续时长(天)
								th.span2.sortable
									span.line
									| 假期状态
								th.span3.sortable.align-right
									span.line
									| 详情
						tbody
							each item in notes
								tr(class="item-id-#{item._id}")
									td 1
									td 病假
									td #{item.start}
									td #{item.timeLength}
									if(item.curState > 0)
										td 
											span.label.label-info 未注销
									else 
										td
											span.label.label-success 已注销
									td.align-right
										a(target="_blank",href="/note/noteInfo/#{item._id}") 点击查看详情
		// end users table
	// end main container
	// scripts
	script(src='http://code.jquery.com/jquery-latest.js')
	script(src='/js/bootstrap.min.js')
	script(src='/js/theme.js')
	script(type='text/javascript').
		$(function () {
			$('.arr_holiday').addClass("active");
			$('.arr_holiday').append("<div class='pointer'><div class='arrow'></div><div class='arrow_border'></div></div>");
			$('#sub').addClass("active");
			$('#reqa').addClass("active");
		});
