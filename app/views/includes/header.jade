// Modal
#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
	.modal-dialog
		form(name="signin" method="POST", action="/user/signin")
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') ×
						span.sr-only ×
					h4#myModalLabel.modal-title 请登录
				.modal-body
						.content-wrap
							h6 用户登录
							input#user.span4(type='text', placeholder='用户名',name='user[userName]')
							br
							input#passwd.span4(type='password', placeholder='密码',name='user[userPwd]')
							br
							.remember
								a.forgot(href='#') 忘记密码？
								input#remember-me(type='checkbox')
								label(for='remember-me') 记住密码				
				.modal-footer
					button.btn.btn-default(type="button", onclick="sub()") 登录
